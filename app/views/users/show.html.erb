    <div class="container">

      <div class="card">
        <article class="card-body mx-auto" style="max-width: 70%;">
          
            <div class="form-group input-group mb-3">
              <h5><strong>Name:</strong> <%= @user.username %></h5>
            </div>
            <div class="form-group input-group mb-3">
              <h5><strong>Email:</strong> <%= @user.email %></h5>
            </div>                               

        </article>
      </div> <!-- card.// -->
      <%= link_to 'Back', users_path, class: "btn btn-outline-dark btn-block mt-3 mb-3" %>
