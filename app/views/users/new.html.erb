<section class="py-5">
    <div class="container">

      <div class="card">
        <article class="card-body mx-auto" style="max-width: 400px;">
          <h4 class="card-title mt-3 mb-3 text-center">Create Your Account</h4>
          <%= form_with scope: :user, url: users_path, local: true do |f| %>
            <div class="form-group input-group mb-3">
              <%= f.text_field :username, class: "form-control", placeholder: "Full name" %>
            </div>
            <div class="form-group input-group mb-3">
              <%= f.email_field :email, class: "form-control", placeholder: "Email address" %>
            </div>              
            <div class="form-group input-group mb-3">
              <%= f.password_field :password, class: "form-control", placeholder: "Create password" %>
            </div>                           
            <div class="form-group text-center mb-3">
                <%= f.submit class: "btn btn-primary btn-block" %>
            </div> <!-- form-group// -->      
            <p class="text-center">Have an account? <a href="login">Log In</a> </p>                                                                 
          <% end %>
        </article>
      </div> <!-- card.// -->
      <%= link_to 'Back', root_path, class: "btn btn-outline-dark mt-3 mb-3" %>
  </div>
</section>