
<section class="py-5">
    <div class="container">
      <div class="card">
        <article class="card-body mx-auto" style="max-width: 400px;">
          <h4 class="card-title mt-3 mb-3 text-center">Forgot your password?</h4>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="form-group input-group mb-3">
              <%=f.email_field :email, autocomplete: "email",  class: "form-control", placeholder: "Your registered email"  %>
            </div>              
                         
            <div class="form-group text-center mb-3">
                <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block" %>
            </div> <!-- form-group// -->      
            <div class="form-group text-center mb-3">
              <%= render "devise/shared/links" %>                                                              
            </div>                                                               
          <% end %>
        </article>
      </div> <!-- card.// -->
      <%= link_to 'Back', root_path, class: "btn btn-outline-dark mt-3 mb-3" %>
  </div>
</section>