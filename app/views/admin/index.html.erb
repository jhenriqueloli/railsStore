          <tr>
            <th scope="col">Name</th>
            <th scope="col">Brand</th>
            <th scope="col">Price</th>
            <th scope="col">Available</th>
            <th scope="col" colspan="4">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @accessories.each do |accessory| %>
