              <td><%= number_to_currency(essence.price) %></td>
              <td><%= essence.quantity %></td>
              <td>
                <div class="btn-group" role="group" aria-label="Basic example">
                  <%= link_to 'Details', essence, class:"btn btn-secondary" %>
