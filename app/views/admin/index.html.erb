                  <%= button_to "Destroy", essence_path(essence), method: :delete,  class: "btn btn-secondary", data: { confirm: 'Are you sure?' }  %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate @essences %>
    </div> 
  </div>

  <div class="container">
    <div class="card apple_pagination">
