<%= form_with(model: @essence, local: true) do |f| %>
  <div class="form-group input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">Name</span>
    </div>
    <%= f.text_field :name, class: "form-control", placeholder: "Product Name" %>
  </div>              
  <div class="form-group input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">Brand</span>
    </div>
    <%= f.text_field :brand, class: "form-control", placeholder: "Product Brand" %>
  </div> 
  <div class="form-group input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">Flavor</span>
    </div>
    <%= f.text_field :flavor, class: "form-control", placeholder: "Product Flavor" %>
  </div>  
  <div class="form-group input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">Size</span>
    </div>
    <%= f.number_field :size,  class: "form-control", placeholder: "Size in (mL)",  min:1 %>
  </div>  
  <div class="form-group input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">Strength</span>
    </div>
    <%= f.text_field :strength, class: "form-control", placeholder: "Strength" %>
  </div>  
  <div class="form-group input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">Price </span>
    </div>
    <%= f.number_field :price, class: "form-control", placeholder: "Price $", step: 0.01, min: 0 %>
  </div> 
  <div class="form-group input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">Quantity</span>
    </div>
    <%= f.number_field :quantity, class: "form-control", placeholder: "Quantity", min: 1, max: 999 %>
  </div>                          
  <div class="form-group text-center mb-3">
      <%= f.submit  class: "btn btn-primary btn-block" %>
  </div> <!-- form-group// -->                                                               
<% end %>