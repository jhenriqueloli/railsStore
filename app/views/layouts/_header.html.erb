<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container px-4 px-lg-5">
    <%= link_to root_path do %>
      <%= image_tag "bairesdev.png", class: "navbar-brand" %>
    <% end %>
    <div class="navbar " id="navbarSupportedContent">
      <% if current_page?(:controller => 'pages', :action => 'home') %>
        <%= form_for("search", url: root_path, method: :get ) do |f| %>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                </svg>      
              </span>
            </div>
            <%= f.text_field :search, class: "form-control", placeholder: "Search" %>
          </div>
        <% end %>
      <% end %>
      <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Admin 
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%= link_to 'Users', users_path, class: "dropdown-item"%>
                <div class="dropdown-divider"></div>
                <%= link_to 'Products', products_path, class: "dropdown-item"%>
                <div class="dropdown-divider"></div>
                <%= link_to 'API', "/api-docs", class: "dropdown-item", target: "_blank"%>
              </div>
            </li>
          <% end %>             
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Welcome <%= current_user.username %>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to 'Edit Profile', edit_user_path(current_user), class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to 'Orders', orders_url, class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to 'Logout', logout_path, class: "dropdown-item", method: :delete %>
            </div>
          </li>
          <li class="nav-item"><%= link_to "Cart", cart_url, class: "nav-link" %></li>
        <% else %>
          <li class="nav-item"><%= link_to "Sign Up", signup_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Login", login_path, class: "nav-link" %></li>
        <% end %> 
      </ul>
    </div>
  </div>
</nav>
